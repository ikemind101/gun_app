<p id="notice"><%= notice %></p>

<nav class="navbar navbar-light bg-light justify-content-between">
  <a class="navbar-brand">GunFun</a>
  <form class="form-inline">
    <%= render 'search_bar' %>
  </form>
</nav>



<div class="p-4">
  <%= link_to '+ New Gun', new_gun_path,  class:"btn btn-primary"%>
</div>

<div class="col-md-12">
  <table class="table table-dark">
    <thead>
      <tr>
        <th></th>
        <th>Make</th>
        <th>Caliber</th>
        <th>Ammo</th>
        <th>Name</th>
        <th>Needs</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @guns.each do |gun| %>
        <tr>
          <td><%= gun.photo %></td>
          <td><%= gun.make %></td>
          <td><%= gun.caliber %></td>
          <td><%= gun.ammo %></td>
          <td><%= gun.name %></td>
          <td><%= gun.needs %></td>
          <td>
            <%= link_to 'Show', gun, class:"btn btn-sm btn-outline-primary" %> 
            <%= link_to 'Edit', edit_gun_path(gun), class:"btn btn-sm btn-outline-primary" %>
            <%= link_to 'Delete', gun, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>